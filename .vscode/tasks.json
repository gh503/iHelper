{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "options": [
                "Debug",
                "Release",
                "MinSizeRel",
                "RelWithDebInfo"
            ],
            "description": "Select build type"
        }
    ],
    "tasks": [
        {
            "label": "Build Windows x64",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/build/scripts/build.ps1",
                "-Platform", "windows",
                "-Arch", "x64",
                "-BuildType", "${input:buildType}"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build Windows x86",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/build/scripts/build.ps1",
                "-Platform", "windows",
                "-Arch", "x86",
                "-BuildType", "${input:buildType}"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        },
        
        {
            "label": "Build macOS Universal",
            "type": "shell",
            "command": "${workspaceFolder}/build/scripts/build.sh",
            "args": [
                "--platform=macos",
                "--build-type=${input:buildType}"
            ],
            "group": "build",
            "problemMatcher": ["$clang"]
        },
        
        {
            "label": "Build Linux x64",
            "type": "shell",
            "command": "${workspaceFolder}/build/scripts/build.sh",
            "args": [
                "--platform=linux",
                "--arch=x64",
                "--build-type=${input:buildType}"
            ],
            "group": "build",
            "problemMatcher": ["$clang"]
        },
        {
            "label": "Build Linux aarch64",
            "type": "shell",
            "command": "${workspaceFolder}/build/scripts/build.sh",
            "args": [
                "--platform=linux",
                "--arch=aarch64",
                "--build-type=${input:buildType}"
            ],
            "group": "build",
            "problemMatcher": ["$clang"]
        }
    ]
}